{
  "name": "lab-de-palavras",
  "version": "1.0.0",
  "description": "Laboratório de Palavras é um projeto desenvolvido para disciplina de Software Livre (IMD0530), que visa o ensino da língua portuguesa nas primeiras fases de estudo.",
  "main": "dist/index.js",
  "scripts": {
    "lint:gulp": "gulp lint",
    "build:gulp": "gulp build",
    "build:web": "gulp build --web",
    "lint": "yarn run lint:gulp -s",
    "prebuild": "yarn run lint:gulp -s",
    "build": "yarn run build:gulp -s",
    "preweb": "yarn run lint:gulp -s",
    "web": "yarn run build:web",
    "start": "electron .",
    "test": "ts-node node_modules/jasmine/bin/jasmine --config=jasmine.json",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:cleanfolder": "gulp dist:cleanfolder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "br.com.labdepalavras",
    "asar": false,
    "mac": {
      "category": "public.app-category.education"
    },
    "files": [
      "./dist/**/*",
      "./build/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extends": null
  },
  "keywords": [
    "palavras",
    "laboratorio",
    "lab",
    "softwarelivre"
  ],
  "author": "",
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/jasmine": "^3.4.4",
    "@types/node": "^11.11.3",
    "@types/pixi.js": "^4.8.6",
    "del": "^4.0.0",
    "del-cli": "^3.0.0",
    "electron": "^4.0.8",
    "electron-builder": "^22.1.0",
    "gulp": "^4.0.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-tslint": "^8.1.4",
    "gulp-typescript": "^5.0.0",
    "jasmine": "^3.5.0",
    "merge2": "^1.2.3",
    "minimist": "^1.2.0",
    "nyc": "^14.1.1",
    "pixi.js": "^4.8.6",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.4.1",
    "tslint": "^5.13.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.6.4",
    "webpack": "^4.29.6",
    "webpack-node-externals": "^1.7.2",
    "webpack-stream": "^5.2.1"
  },
  "dependencies": {
    "pixi.js": "^4.8.6",
    "@types/yaml": "^1.2.0",
    "yaml": "^1.7.2"
  }
}
